{
  "name": "Sample - Headhunter OAuth",
  "version": "0.0.1",
  "icons": { "48": "img/icon-48.png",
            "128": "img/icon-128.png" },
  "description": "Uses OAuth to connect to HeadHunter api",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "img/icon-19.png"
  },
  "permissions": [
    "tabs",
    "https://hh.ru/oauth/*",
    "https://hh.ru/account/*"
  ],
  "web_accessible_resources": [
    "oauth-callback.html",
    "oauth-callback.js"
  ],
  "manifest_version": 2
}
